{% extends 'base.html.twig' %}

{% block title %}Réinitialiser le mot de passe{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1 class="font-bold text-center text-2xl my-10">Réinitialiser votre mot de passe</h1>

    <div class="flex flex-col my-10 p-5 mx-auto max-w-md rounded-2xl shadow-md shadow-blue-700 items-center space-y-4 font-semibold bg-[#F7F7F7]">
        {{ form_start(requestForm) }}
        <div class="grid grid-cols-3 gap-5 items-center mx-5">
            {{ form_label(requestForm.email, 'Adresse email*') }}
            {{ form_widget(requestForm.email, { 'attr': { 'class': 'col-span-2 mt-1 block w-full bg-white border border-blue-700 rounded-md text-black px-2' } }) }}
            {{ form_errors(requestForm.email) }}
        </div>
            
        <p class="text-xs py-2 text-gray-400 text-justify">Entrez votre adresse email pour recevoir un lien de réinitialisation de mot de passe. Si vous ne recevez pas d'email, vérifiez votre dossier de spam ou essayez à nouveau.</p>

        <button class="block bg-linear-to-t from-sky-500 to-blue-700 hover:shadow-md hover:shadow-black text-white font-semibold rounded-3xl px-3 py-2 mx-auto text-sm cursor-pointer">Recevoir le lien de réinitialisation</button>
        {{ form_end(requestForm) }}
    </div>
{% endblock %}
